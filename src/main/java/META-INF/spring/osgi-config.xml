<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:osgi="http://www.springframework.org/schema/osgi"	
		xmlns:aop="http://www.springframework.org/schema/aop"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
							http://www.springframework.org/schema/osgi
							http://www.springframework.org/schema/osgi/spring-osgi-1.2.xsd
							http://www.springframework.org/schema/aop 
       						http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">


	<osgi:service id="SiberneticModelExporter" ref="siberneticModelInterpreter" interface="org.geppetto.core.model.IModelInterpreter">
	</osgi:service>
	<bean id="siberneticModelInterpreter" scope="prototype" class="org.geppetto.sibernetic.SiberneticModelInterpreterService">
	<aop:scoped-proxy proxy-target-class="false"/>
	</bean>
	
	<osgi:service id="SiberneticSimulatorExporter" ref="sibernetic" interface="org.geppetto.core.simulator.ISimulator">
	</osgi:service>
	<bean id="sibernetic" scope="prototype" class="org.geppetto.sibernetic.SiberneticWrapperService">
	<aop:scoped-proxy proxy-target-class="false"/>
	</bean>
</beans>
